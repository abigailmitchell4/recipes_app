<div class="container">
<br/>
  <h3>YOUR RECIPES <%= link_to "Add Recipe", new_recipe_path, class:"swaves-effect waves-light btn-small btn-flat right" %></h3>
<br/>
<hr/>
</div>

<div class="container flex">
<% if @recipes.any? %>
<% @recipes.each do |r| %>
  <div class="row">
    <div class="col s12">
      <div class="card green-color">
        <div class="card-content">
          <span class="card-title">
            <%=link_to r.name, recipe_path(r)%>
              </span>
              <div class="card-action">
               <%= link_to 'Edit', edit_recipe_path(r) %>

                <%= link_to 'Delete', recipe_path(r.id), method: :delete, data: { confirm: 'Are you sure?' } %>
              </div>
            </div>
          </div>
        </div>
      </div> 
    <% end %> 
  <% else %>
  <div class="container">
    <h5>No Recipes, Please Add One</h5>
  </div>
<% end %>
</div>
            
