
<div class="container">
<br/>
  <h3>YOUR RECIPES <%= link_to "Add Recipe", new_recipe_path, class:"swaves-effect waves-light btn-small btn-flat right" %></h3>
<br/>
<hr/>
</div>
<div class="container">
  <div class="row">
    <div class="col s12 m6">
      <div class="card green-color">
        <div class="card-content">
          <span class="card-title">
            <% @recipes.each do |r| %>
            <%=link_to r.name, recipe_path(r)%>
              </span>
              <div class="card-action">
               <%= link_to 'Edit', edit_recipe_path(r) %>

                <%= link_to 'Delete', recipe_path(r.id), method: :delete, data: { confirm: 'Are you sure?' }, class: "waves-effect waves-light btn-flat " %>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>  
</div>
